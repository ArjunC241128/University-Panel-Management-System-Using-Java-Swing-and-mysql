package University_Management;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class TeacherHomePage extends JFrame implements ActionListener {
    JLabel label;
    Font font, font1;
    JPanel panel;
    public String id, account2;

    TeacherHomePage(String account) {
        this.setTitle("University Management System Teacher Home Page");
        setLocation(0, 0);
        setSize(1280, 780);
        account2 = account;

        font = new Font("Arial", Font.BOLD, 20);
        font1 = new Font("Arial", Font.BOLD, 18);

        ImageIcon img = new ImageIcon(ClassLoader.getSystemResource("University_Management/images/Teacher Home.jpg")); // Replace with actual image path
        Image i1 = img.getImage().getScaledInstance(1200, 780, Image.SCALE_SMOOTH);
        ImageIcon img1 = new ImageIcon(i1);
        label = new JLabel(img1);

        JMenuBar menubar1 = new JMenuBar();

        JMenu menu1 = new JMenu("Teacher Profile");
        JMenu menu2 = new JMenu("Student Result Profile");
        JMenu menu3 = new JMenu("Logout");

        JMenuItem menuitem1 = new JMenuItem("Update Teacher Details");
        JMenuItem menuitem2 = new JMenuItem("View Teacher Details");
        JMenuItem menuitem3 = new JMenuItem("Add Student Result Details");
        JMenuItem menuitem4 = new JMenuItem("View Student Result Details");
        JMenuItem menuitem5 = new JMenuItem("Exit");

        menu1.add(menuitem1);
        menu1.add(menuitem2);
        menu2.add(menuitem3);
        menu2.add(menuitem4);
        menu3.add(menuitem5);

        menubar1.add(menu1);
        menubar1.add(menu2);
        menubar1.add(menu3);

        menu1.setFont(font);
        menu2.setFont(font);
        menu3.setFont(font);

        menuitem1.setFont(font1);
        menuitem2.setFont(font1);
        menuitem3.setFont(font1);
        menuitem4.setFont(font1);
        menuitem5.setFont(font1);

        menubar1.setBackground(new Color(4, 1, 54));
        menu1.setForeground(Color.GRAY);
        menu2.setForeground(Color.GRAY);
        menu3.setForeground(Color.RED);

        menuitem1.setForeground(Color.GREEN);
        menuitem2.setForeground(Color.GREEN);
        menuitem3.setForeground(Color.GREEN);
        menuitem4.setForeground(Color.GREEN);
        menuitem5.setForeground(Color.RED);

        menuitem1.setBackground(Color.BLACK);
        menuitem2.setBackground(Color.BLACK);
        menuitem3.setBackground(Color.BLACK);
        menuitem4.setBackground(Color.BLACK);
        menuitem5.setBackground(Color.BLACK);

        menuitem1.addActionListener(this);
        menuitem2.addActionListener(this);
        menuitem3.addActionListener(this);
        menuitem4.addActionListener(this);
        menuitem5.addActionListener(this);

        setJMenuBar(menubar1);
        add(label);
    }

    public void actionPerformed(ActionEvent actionevent) {
        String command = actionevent.getActionCommand();

        switch (command) {
            case "Update Teacher Details":
                new UpdateTeacherDetails().setVisible(true);
                break;
            case "View Teacher Details":
               new ViewTeacherDetails().setVisible(true);
               break;
            case "Add Student Result Details":
                new AddMarksDetails().setVisible(true);
                break;
            case "View Student Result Details":
                new ViewMarksDetails().setVisible(true);
                break;
            case "Exit":
                int a = JOptionPane.showConfirmDialog(this, "Are you sure you want to exit?", "Exit", JOptionPane.YES_NO_OPTION);
                if (a == JOptionPane.YES_OPTION) {
                    System.exit(0);
                }
                break;
        }
    }

    public static void main(String[] args) {
        new TeacherHomePage("teacher1").setVisible(true);
    }
}
