package University_Management;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
public class TeacherHomePage extends JFrame implements ActionListener {
    JLabel l1;
    Font f, f1;
    JPanel p1;
    public String id, account2;
    TeacherHomePage(String account) {
        this.setTitle("University Management System Teacher Home Page");
        setLocation(0, 0);
        setSize(1280, 780);
        account2 = account;
        f = new Font("Aerial", Font.BOLD, 20);
        f1 = new Font("Aerial", Font.BOLD, 18);
        ImageIcon img = new ImageIcon(ClassLoader.getSystemResource("University_Management/images/Teacher Home.jpg")); // Replace with actual image path
        Image i1 = img.getImage().getScaledInstance(1200, 780, Image.SCALE_SMOOTH);
        ImageIcon img1 = new ImageIcon(i1);
        l1 = new JLabel(img1);
        JMenuBar m1 = new JMenuBar();
        JMenu menu1 = new JMenu("Teacher Profile");
        JMenu menu2 = new JMenu("Student Profile");
        JMenu menu3 = new JMenu("Fee Details");
        JMenu menu4 = new JMenu("Logout");
        JMenuItem ment1 = new JMenuItem("Update Teacher Details");
        JMenuItem ment2 = new JMenuItem("View Teacher Details");
        menu1.add(ment1);
        menu2.add(ment2);
        JMenuItem ment3 = new JMenuItem("Update Student Details");
        JMenuItem ment4 = new JMenuItem("View Student Details");
        menu2.add(ment3);
        menu2.add(ment4);
        JMenuItem ment5 = new JMenuItem("Add Fee Details");
        menu3.add(ment5);
        JMenuItem ment6 = new JMenuItem("Exit");
        menu4.add(ment6);
        m1.add(menu1);
        m1.add(menu2);
        m1.add(menu3);
        m1.add(menu4);
        menu1.setFont(f);
        menu2.setFont(f);
        menu3.setFont(f);
        menu4.setFont(f);
        ment1.setFont(f1);
        ment2.setFont(f1);
        ment3.setFont(f1);
        ment4.setFont(f1);
        ment5.setFont(f1);
        ment6.setFont(f1);
        m1.setBackground(new Color(4, 1, 54));
        menu1.setForeground(Color.GRAY);
        menu2.setForeground(Color.GRAY);
        menu3.setForeground(Color.GRAY);
        menu4.setForeground(Color.RED);
        ment1.setForeground(Color.GREEN);
        ment2.setForeground(Color.GREEN);
        ment3.setForeground(Color.GREEN);
        ment4.setForeground(Color.GREEN);
        ment5.setForeground(Color.GREEN);
        ment6.setForeground(Color.RED);
        ment1.setBackground(Color.BLACK);
        ment2.setBackground(Color.BLACK);
        ment3.setBackground(Color.BLACK);
        ment4.setBackground(Color.BLACK);
        ment5.setBackground(Color.BLACK);
        ment6.setBackground(Color.BLACK);
        ment1.addActionListener(this);
        ment2.addActionListener(this);
        ment3.addActionListener(this);
        ment4.addActionListener(this);
        ment5.addActionListener(this);
        ment6.addActionListener(this);
        setJMenuBar(m1);
        add(l1);
    }
    public void actionPerformed(ActionEvent ae) {

    }
    public static void main(String[] args) {
        //new TeacherHomePage().setVisible(true);
    }
}
