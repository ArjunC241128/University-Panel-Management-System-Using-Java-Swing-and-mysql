package University_Management;
import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.sql.*;

public class LoginPage extends JFrame implements ActionListener {

    JLabel label1, label2, label3, label4, label5;
    JTextField textField;
    JPasswordField passwordField;
    Choice choice;
    JButton button1, button2, registerbutton;

    public LoginPage() {
        setTitle("University Login Account");
        setLayout(null);

        label1 = new JLabel();
        label1.setBounds(0, 0, 750, 450);
        label1.setLayout(null);

        try {
            ImageIcon img = new ImageIcon(ClassLoader.getSystemResource("University_Management/images/login.jpg"));
            Image i1 = img.getImage().getScaledInstance(750, 450, Image.SCALE_SMOOTH);
            ImageIcon img1 = new ImageIcon(i1);
            label1.setIcon(img1);
        } catch (Exception e) {
            System.out.println("Background image not found.");
        }

        label2 = new JLabel("University Login Account");
        label2.setBounds(230, 60, 500, 50);
        label2.setFont(new Font("Arial", Font.BOLD, 30));
        label2.setForeground(new Color(53, 4, 117));
        label1.add(label2);

        label3 = new JLabel("Account       :");
        label3.setBounds(180, 140, 150, 30);
        label3.setFont(new Font("Arial", Font.BOLD, 20));
        label3.setForeground(new Color(245, 135, 66));
        label1.add(label3);

        choice = new Choice();
        choice.add("Admin");
        choice.add("Student");
        choice.add("Teacher");
        choice.setFont(new Font("Arial", Font.PLAIN, 16));
        choice.setBounds(330, 140, 200, 30);
        label1.add(choice);

        label4 = new JLabel("Username    :");
        label4.setBounds(180, 190, 150, 30);
        label4.setFont(new Font("Arial", Font.BOLD, 20));
        label4.setForeground(new Color(245, 135, 66));
        label1.add(label4);

        textField = new JTextField();
        textField.setFont(new Font("Arial", Font.BOLD, 18));
        textField.setBounds(330, 190, 200, 30);
        label1.add(textField);

        label5 = new JLabel("Password    :");
        label5.setBounds(180, 240, 150, 30);
        label5.setFont(new Font("Arial", Font.BOLD, 20));
        label5.setForeground(new Color(245, 135, 66));
        label1.add(label5);

        passwordField = new JPasswordField();
        passwordField.setFont(new Font("Arial", Font.BOLD, 18));
        passwordField.setBounds(330, 240, 200, 30);
        label1.add(passwordField);

        button1 = new JButton("Login");
        button2 = new JButton("Back");
        registerbutton = new JButton("Register");

        button1.setFont(new Font("Arial", Font.BOLD, 18));
        button2.setFont(new Font("Arial", Font.BOLD, 18));
        registerbutton.setFont(new Font("Arial", Font.BOLD, 18));

        button1.setBounds(180, 310, 100, 40);
        button2.setBounds(300, 310, 100, 40);
        registerbutton.setBounds(420, 310, 110, 40);

        button1.addActionListener(this);
        button2.addActionListener(this);
        registerbutton.addActionListener(e -> {
            new RegistrationForm().setVisible(true);
            dispose(); // Close login window
        });

        label1.add(button1);
        label1.add(button2);
        label1.add(registerbutton);

        add(label1);
        setSize(750, 460);
        setLocation(300, 100);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setVisible(true);
    }

    public void actionPerformed(ActionEvent actionevent) {
        if (actionevent.getSource() == button1) {
            String username = textField.getText().trim();
            String password = new String(passwordField.getPassword()).trim();
            String account = choice.getSelectedItem();

            if (username.equals("") || password.equals("")) {
                JOptionPane.showMessageDialog(this, "Please enter username and password");
                return;
            }

            try {
                ConnectionClass obj = new ConnectionClass();

                if (obj.con == null) {
                    JOptionPane.showMessageDialog(this, "Database connection failed.");
                    return;
                }

                String q = "SELECT * FROM user_register WHERE username = ? AND password = ?";
                try (PreparedStatement stmt = obj.con.prepareStatement(q)) {
                    stmt.setString(1, username);
                    stmt.setString(2, password);
                    ResultSet rest = stmt.executeQuery();

                    if (rest.next()) {
                        JOptionPane.showMessageDialog(this, account + " login successful!");

                        if (account.equals("Admin")) {
                            new AdminHomePage("Admin").setVisible(true);
                        } else if (account.equals("Teacher")) {
                            new TeacherHomePage(username).setVisible(true);
                        } else if (account.equals("Student")) {
                            //new StudentHomePage(username).setVisible(true);
                        }

                        this.setVisible(false);
                    } else {
                        JOptionPane.showMessageDialog(this, "Wrong username or password");
                    }
                }
            } catch (Exception e) {
                e.printStackTrace();
                JOptionPane.showMessageDialog(this, "Error occurred during login");
            }
        } else if (actionevent.getSource() == button2) {
            this.setVisible(false); // Back
        }
    }

    public static void main(String[] args) {
        new LoginPage();
    }
}
