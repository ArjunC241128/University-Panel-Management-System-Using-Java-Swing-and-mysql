package University_Management;
import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.*;

public class RegistrationForm extends JFrame {

    JTextField nameField, emailField;
    JPasswordField passwordField;
    JComboBox<String> departmentCombo, usertypeCombo;
    JButton signInBtn;

    public RegistrationForm() {
        setTitle("User Registration");
        setSize(400, 400);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        JPanel panel = new JPanel();
        panel.setLayout(null);

        JLabel nameLabel = new JLabel("Name:");
        nameLabel.setBounds(50, 30, 100, 25);
        panel.add(nameLabel);

        nameField = new JTextField();
        nameField.setBounds(160, 30, 180, 25);
        panel.add(nameField);

        JLabel emailLabel = new JLabel("Email:");
        emailLabel.setBounds(50, 70, 100, 25);
        panel.add(emailLabel);

        emailField = new JTextField();
        emailField.setBounds(160, 70, 180, 25);
        panel.add(emailField);

        JLabel passwordLabel = new JLabel("Password:");
        passwordLabel.setBounds(50, 110, 100, 25);
        panel.add(passwordLabel);

        passwordField = new JPasswordField();
        passwordField.setBounds(160, 110, 180, 25);
        panel.add(passwordField);

        JLabel deptLabel = new JLabel("Department:");
        deptLabel.setBounds(50, 150, 100, 25);
        panel.add(deptLabel);

        String[] departments = {"CSE", "EEE", "BBA", "Civil", "Textile"};
        departmentCombo = new JComboBox<>(departments);
        departmentCombo.setBounds(160, 150, 180, 25);
        panel.add(departmentCombo);

        JLabel userTypeLabel = new JLabel("User Type:");
        userTypeLabel.setBounds(50, 190, 100, 25);
        panel.add(userTypeLabel);

        String[] users = {"Admin", "Student", "Teacher"};
        usertypeCombo = new JComboBox<>(users);
        usertypeCombo.setBounds(160, 190, 180, 25);
        panel.add(usertypeCombo);

        JButton registerBtn = new JButton("Register");
        registerBtn.setBounds(50, 240, 130, 30);
        panel.add(registerBtn);

        signInBtn = new JButton("Sign In");
        signInBtn.setBounds(210, 240, 130, 30);
        panel.add(signInBtn);

        registerBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                registerUser();
            }
        });

        signInBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                dispose();
                new LoginPage();
            }
        });

        add(panel);
        setVisible(true);
    }

    void registerUser() {
        String name = nameField.getText().trim();
        String email = emailField.getText().trim();
        String password = String.valueOf(passwordField.getPassword()).trim();
        String department = (String) departmentCombo.getSelectedItem();
        String usertype = (String) usertypeCombo.getSelectedItem();

        if (name.isEmpty() || email.isEmpty() || password.isEmpty() || department == null || usertype == null) {
            JOptionPane.showMessageDialog(this, "Please fill all fields.");
            return;
        }

        try {
            ConnectionClass obj = new ConnectionClass();
            String sql = "INSERT INTO user_register (username, email, password, department, usertype) VALUES (?, ?, ?, ?, ?)";
            PreparedStatement stmt = obj.con.prepareStatement(sql);
            stmt.setString(1, name);
            stmt.setString(2, email);
            stmt.setString(3, password);
            stmt.setString(4, department);
            stmt.setString(5, usertype);
            stmt.executeUpdate();

            JOptionPane.showMessageDialog(this, "Registration successful!");
            clearFields();
            dispose();
            new LoginPage();

        } catch (SQLIntegrityConstraintViolationException dup) {
            JOptionPane.showMessageDialog(this, "Email already registered.");
        } catch (Exception ex) {
            ex.printStackTrace();
            JOptionPane.showMessageDialog(this, "Registration failed.");
        }
    }

    void clearFields() {
        nameField.setText("");
        emailField.setText("");
        passwordField.setText("");
        departmentCombo.setSelectedIndex(0);
        usertypeCombo.setSelectedIndex(0);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> new RegistrationForm());
    }
}

