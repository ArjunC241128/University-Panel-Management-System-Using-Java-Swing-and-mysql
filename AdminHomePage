package University_Management;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class AdminHomePage extends JFrame implements ActionListener {
    JLabel label1;
    Font font, font1;
    public String id, account2;
    AdminHomePage(String account) {
        setTitle("University Management System Admin Home Page");
        setLocation(0, 0);
        setSize(1280, 780);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        account2 = account;
        font = new Font("Arial", Font.BOLD, 20);
        font1 = new Font("Arial", Font.BOLD, 18);
        ImageIcon img = new ImageIcon(ClassLoader.getSystemResource("University_Management/images/Admin.jpg"));
        Image i1 = img.getImage().getScaledInstance(1280, 780, Image.SCALE_SMOOTH);
        ImageIcon img1 = new ImageIcon(i1);
        label1 = new JLabel(img1);
        label1.setBounds(0, 0, 1280, 780);
        label1.setLayout(null);
        JMenuBar menubar1 = new JMenuBar();
        JMenu menu1 = new JMenu("Teacher Profile");
        JMenu menu2 = new JMenu("Student Profile");
        JMenu menu3 = new JMenu("Fee Details");
        JMenu menu4 = new JMenu("Logout");

        JMenuItem menuitem1 = new JMenuItem("Add Teacher Details");
        JMenuItem menuitem2 = new JMenuItem("Update Teacher Details");
        JMenuItem menuitem3 = new JMenuItem("View Teacher Details");
        JMenuItem menuitem4 = new JMenuItem("Add Student Details Per Semester");
        JMenuItem menuitem7 = new JMenuItem("Add Fee Structure");
        JMenuItem menuitem8 = new JMenuItem("Add Fee Details");
        JMenuItem menuitem9 = new JMenuItem("Exit");
        menu1.add(menuitem1);
        menu1.add(menuitem2);
        menu1.add(menuitem3);
        menu2.add(menuitem4);
        menu3.add(menuitem7);
        menu3.add(menuitem8);
        menu4.add(menuitem9);

        menubar1.add(menu1);
        menubar1.add(menu2);
        menubar1.add(menu3);
        menubar1.add(menu4);

        menu1.setFont(font);
        menu2.setFont(font);
        menu3.setFont(font);
        menu4.setFont(font);
        menuitem1.setFont(font1);
        menuitem2.setFont(font1);
        menuitem3.setFont(font1);
        menuitem4.setFont(font1);
        menuitem7.setFont(font1);
        menuitem8.setFont(font1);
        menuitem9.setFont(font1);

        menu1.setForeground(Color.GRAY);
        menu2.setForeground(Color.GRAY);
        menu3.setForeground(Color.GRAY);
        menu4.setForeground(Color.RED);

        Color itemBG = new Color(135, 206, 235);
        Color itemFG = Color.BLACK;

        menuitem1.setForeground(itemFG);
        menuitem1.setBackground(itemBG);
        menuitem2.setForeground(itemFG);
        menuitem2.setBackground(itemBG);
        menuitem3.setForeground(itemFG);
        menuitem3.setBackground(itemBG);
        menuitem4.setForeground(itemFG);
        menuitem4.setBackground(itemBG);
        menuitem7.setForeground(itemFG);
        menuitem7.setBackground(itemBG);
        menuitem8.setForeground(itemFG);
        menuitem8.setBackground(itemBG);
        menuitem9.setForeground(Color.RED);
        menuitem9.setBackground(itemBG);

        menuitem1.addActionListener(this);
        menuitem2.addActionListener(this);
        menuitem3.addActionListener(this);
        menuitem4.addActionListener(this);
        menuitem7.addActionListener(this);
        menuitem8.addActionListener(this);
        menuitem9.addActionListener(this);

        setJMenuBar(menubar1);
        add(label1);
    }

    public void actionPerformed(ActionEvent event) {
        String command = event.getActionCommand();

        if (command.equals("Add Teacher Details")) {
            new AddTeacherDetails().setVisible(true);
        }
        else if (command.equals("Update Teacher Details")) {
            new UpdateTeacherDetails().setVisible(true);
        }
        else if (command.equals("View Teacher Details")) {
            new ViewTeacherDetails().setVisible(true);
        }
        else if (command.equals("Add Student Details Per Semester")) {
            new AddNewSemester().setVisible(true);
        }
        else if (command.equals("Add Fee Structure")) {
            new AddFeeStructure();
        }
        else if (command.equals("Add Fee Details")) {
            new AddFeeDetails();
        }
        else if (command.equals("Exit")) {
            int a = JOptionPane.showConfirmDialog(this, "Are you sure you want to exit?", "Exit", JOptionPane.YES_NO_OPTION);
            if (a == JOptionPane.YES_OPTION) {
                System.exit(0);
            }
        }
    }

    //public static void main(String[] args) {
        //new AdminHomePage("Admin").setVisible(true);
    //}
}
